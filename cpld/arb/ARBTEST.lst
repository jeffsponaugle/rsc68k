 34:
 35:REQ_CLOCKED0.d = REQ0;
 36:REQ_CLOCKED1.d = REQ1;
 37:REQ_CLOCKED0.ck = CLK_IN;
 38:REQ_CLOCKED1.ck = CLK_IN;
 39:REQ_CLOCKED0.ar = !RESET_IN;
 40:REQ_CLOCKED1.ar = !RESET_IN;
 41:
 42:PE_BIAS.d = !PE_BIAS;
 43:PE_BIAS.ck = !GRANT_ACTIVE;        /* Flip the PE_BIAS each time we start a new grant cycle */
 44:PE_BIAS.ar = RESET_IN;
 45:
 46:GRANT_ACTIVE = GRANT0 & GRANT1;   /* Active low signal that either grant is active */
 47:
 48:PE_OUT_0 = ( PE_BIAS # REQ_CLOCKED0) &                     /* if BIAS is towards input 0, set output0 if input0 is set */
 49:           ( !PE_BIAS # (REQ_CLOCKED0 # !REQ_CLOCKED1));  /* if BIAS is towards input 1, set output0 if input0 is set AND input 1 is not */
 50:
 51:PE_OUT_1 = ( !PE_BIAS # REQ_CLOCKED1) &                    /* if BIAS is towards input 1, set output1 if input1 is set */
 52:           ( PE_BIAS # (REQ_CLOCKED1 # !REQ_CLOCKED0));   /* if BIAS is towards input 0, set output1 if input1 is set AND input 0 is not */
