 21:/** Inputs **/
 22:
 23:Pin  0  = CLK_IN;                  /* Clock */
 24:Pin  0  = RESET_IN;                /* Active Low Reset */
 25:
 26:Pin [0..0] = [REQ0..1];                  /* Active Low Request */
 27:
 28:Pin [0..0] = [GRANT0..1];                /* Active Low Grant */
 29:
 30:NODE [REQ_CLOCKED0..1];
 31:NODE PE_BIAS;
 32:
 33:REQ_CLOCKED0.d = REQ0;
 34:REQ_CLOCKED1.d = REQ1;
 35:[REQ_CLOCKED0..1].ck = CLK_IN;
 36:[REQ_CLOCKED0..1].ar = !RESET_IN;
 37:
 38:PE_BIAS.d = !PE_BIAS;
 39:PE_BIAS.ck = !GRANT_ACTIVE;        /* Flip the PE_BIAS each time we start a new grant cycle */
 40:PE_BIAS.ar = RESET_IN;
 41:
 42:GRANT_ACTIVE = GRANT0 & GRANT1;   /* Active low signal that either grant is active */
 43:
 44:PE_OUT_0 = ( PE_BIAS # REQ_CLOCKED0) &                     /* if BIAS is towards input 0, set output0 if input0 is set */
 45:           ( !PE_BIAS # (REQ_CLOCKED0 # !REQ_CLOCKED1));  /* if BIAS is towards input 1, set output0 if input0 is set AND input 1 is not */
 46:
 47:PE_OUT_1 = ( !PE_BIAS # REQ_CLOCKED1) &                    /* if BIAS is towards input 1, set output1 if input1 is set */
 48:           ( PE_BIAS # (REQ_CLOCKED1 # !REQ_CLOCKED0));   /* if BIAS is towards input 0, set output1 if input1 is set AND input 0 is not */
 49:          
 50:GRANT0.d = ( !GRANT_ACTIVE & GRANT0 ) #     /* If a grant is active, don't change output state */
 51:          ( GRANT_ACTIVE & PE_OUT_0 );    /* If a grant is not active, grab the output from the priority encoder */
 52:
 53:GRANT1.d = ( !GRANT_ACTIVE & GRANT1 ) #     /* If a grant is active, don't change output state */

